<form action="/newProduct"
      method='post'
      class="dropzone dz-clickable"
      name="userID"
      id="dropzonefile">
      <input type="text" name="name" placeholder="Name"/> <br>
      <input type="text" name="school" placeholder="University"/> <br>
      <input type="password" name="subject" placeholder="Subject"/> <br>
      <input type="text" name="course" placeholder="Course"/> <br>
      <input type="number" name="price" placeholder="Price"/> <br>
      <div style='border: 2px solid rgba(0, 0, 0, 0.3); height: 70px; width: 400px' class="dz-default dz-message">
        <span> Drop files here! </span>
      </div>
      <button type="submit">Submit data and files!</button>
</form>
<script src="/scripts/dropzone.js"></script>
