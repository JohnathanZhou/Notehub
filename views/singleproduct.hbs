<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{product.name}}</title>

  <!-- Bootstrap -->
  <link rel="stylesheet" type="text/css" href="/Userprofile/A.bootstrap.css.pagespeed.cf.laZJ-JbHjf.css">
  <!--Main styles-->
  <link rel="stylesheet" type="text/css" href="/Userprofile/A.main.css+adaptive.css+pushy.css+font-awesome.css+animate.css,Mcc.7Xi885fzpN.css.pagespeed.cf.D0GJ6jOiSK.css">

  <link rel="stylesheet" type="text/css" href="/Userprofile/A.settings.css.pagespeed.cf.6k-xcbLfXv.css" media="screen">
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <script>
    .text {
      color: white;
    }
  </script>


</head>
<body>
  <body class="container">
    <div class="infomation col-sm-8" style="text-align: center;">
      <div style="font-size: 200%">
        <div class="text" style="display: inline-block; float: left;"> {{product.name}}</div>
        <hr />
        <div class="text" style="display: inline-block;"> ${{product.price}}.00</div>
      </div>

      <br /><br /><br />

      <div style="font-size: 150%; float: left;">
        <p class="text">Subject: {{product.subject}}</p>
        <p class="text">Course: {{product.course}}</p>
        <p class="text">Description: {{product.description}}</p>
      </div>

      <!-- <br /><br /><br /> -->

      <div>
        <img src="{{product.pdf}}" width="100%"></img>
      </div>
      <br />
      <div class="form-group">
        <a class="btn btn-danger col-sm-12" href="/newReview">Make a Review</a>
      </div>
      <br /><br />
      <div style="font-size: 150%; float: left;">
        Reviews:
      </div>

      <br /><br />

      {{#each reviews}}
      <p>{{user.displayName}}</p>
      <p>{{stars}}</p>
      <p>{{content}}</p>
      <hr />
      {{/each}}

      <div class="form-group">
        <a class="btn btn-default" href="/marketplace" style="float: left;">All Products</a>
      </div>

    </div>
  </body>
</body>
